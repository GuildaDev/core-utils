{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "remove-falsy-keys": ["packages/remove-falsy-keys/src/index.ts"],
      "remove-nil-keys": ["packages/remove-nil-keys/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
