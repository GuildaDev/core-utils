{
  "name": "remove-falsy-keys",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/remove-falsy-keys/src",
  "projectType": "library",
  "targets": {
    "bundler": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/remove-falsy-keys",
        "main": "packages/remove-falsy-keys/src/index.ts",
        "tsConfig": "packages/remove-falsy-keys/tsconfig.lib.json",
        "assets": ["packages/remove-falsy-keys/*.md"],
        "format": ["esm", "cjs"]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p packages/remove-falsy-keys/tsconfig.builder.json --outDir ./dist"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "bundler"
        }
      ]
    },
    "publish:build:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd dist/packages/remove-falsy-keys && npm publish --registry http://localhost:4873"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "publish:build:prod": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd dist/packages/remove-falsy-keys && npm publish --registry https://registry.npmjs.org"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/remove-falsy-keys/**/*.ts",
          "packages/remove-falsy-keys/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/remove-falsy-keys/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
